name = input("name of student: ")
science = input("grades in science: ")
math = input("grades in math: ")
english = input("grades in english: ")
total = float(science) + float(math) + float(english)
average = float(total) / 3

print("name of student: ",name)
print("grades in science: ",science)
print("grades in math: ",math)
print("grades in english: ",english)
print("your total average is", round(average,2))


if average < 75:
    print("you failed!")
if average > 75:
    print("congratulationd! you passed!")
